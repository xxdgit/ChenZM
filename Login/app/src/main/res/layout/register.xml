<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_register_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_group"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:text="   欢迎注册"
            android:textSize="20sp"
            android:textColor="#000000"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_register_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_register_header"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入账户："
            android:textSize="15sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/et_register_account"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="手机号"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_register_account"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入密码："
            android:textSize="15sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ensure_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_register_password"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="15sp"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/et_ensure_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_problem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_ensure_password">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密保问题："
            android:textColor="#000000"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/et_problem"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="以便需要时找回密码"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_problem">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的答案："
            android:textColor="#000000"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/et_answer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="请务必记住答案"/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_answer"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="160dp"
        android:text="提 交"
        android:textSize="25sp"/>
    <Button
        android:id="@+id/bt_return_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/bt_register"
        android:layout_marginLeft="40dp"
        android:text="返 回"
        android:textSize="25sp"
        />

</RelativeLayout>
